{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build using Makefile",
            "type": "shell",
            "command": "make",
            "args": [
                "all"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "This task builds the project using the Makefile"
        },
        {
            "label": "Clean using Makefile",
            "type": "shell",
            "command": "make",
            "args": [
                "clean"
            ],
            "group": "none",
            "problemMatcher": []
        },
        {
            "type": "cppbuild",
            "label": "C/C++: gcc sestavit aktivní soubor",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/src/link_list.c",   // Hlavní soubor
                "${workspaceFolder}/src/list.c",        // Další soubor obsahující funkce
                "-o",
                "${workspaceFolder}/bin/link_list"      // Upravený výstupní soubor do složky bin
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Úloha vygenerovaná ladicím programem"
        }
    ]
}